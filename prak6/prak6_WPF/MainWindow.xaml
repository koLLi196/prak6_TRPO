<Window x:Class="prak6_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prak6_WPF"
        mc:Ignorable="d"
        Title="Регистрация нового пользователя" Height="450" Width="800">

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="50" Background="SteelBlue">
            <Button Content="Главная" Margin="5" Width="120" Height="30"/>
            <Button Content="Профиль" Margin="5" Width="120" Height="30"/>
            <Button Content="Настройки" Margin="5" Width="120" Height="30"/>
            <Button Content="Помощь" Margin="5" Width="120" Height="30"/>
        </StackPanel>

        <Grid>

            <Grid Margin="10" Width="600" Height="300" VerticalAlignment="Top" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>

            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="10,10,10,10">
                <Button Content="Загрузить фото" Height="20" Width="180" VerticalAlignment="Bottom" Margin="150" ></Button>
            </Border>


            <Label Content="ФИО: " Grid.Row="0" Grid.RowSpan="2"/>
            <Label Content="Email: " Grid.RowSpan="2"/>
            <Label Content="Телефон: " Grid.RowSpan="2"/>
            <Label Content="Дата рождения: " Grid.RowSpan="2"/>
            <Label Content="Пол: " Grid.RowSpan="2"/>
            <Label Content="Пароль: " Grid.RowSpan="2"/>

        </Grid>
    </DockPanel>


</Window>
